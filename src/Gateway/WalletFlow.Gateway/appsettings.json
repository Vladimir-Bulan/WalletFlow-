{
  "Jwt": {
    "Secret": "WalletFlow-Super-Secret-Key-2024-MinLength32Chars!",
    "Issuer": "WalletFlow.Identity",
    "Audience": "WalletFlow"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": { "Path": "/api/auth/{**catch-all}" },
        "Transforms": [{ "PathPattern": "/api/auth/{**catch-all}" }]
      },
      "identity-users-route": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "Default",
        "Match": { "Path": "/api/users/{**catch-all}" },
        "Transforms": [{ "PathPattern": "/api/users/{**catch-all}" }]
      },
      "finance-route": {
        "ClusterId": "finance-cluster",
        "AuthorizationPolicy": "Default",
        "Match": { "Path": "/api/accounts/{**catch-all}" },
        "Transforms": [{ "PathPattern": "/api/accounts/{**catch-all}" }]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-1": { "Address": "http://localhost:5001" }
        }
      },
      "finance-cluster": {
        "Destinations": {
          "finance-1": { "Address": "http://localhost:5002" }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": { "Default": "Information", "Microsoft.AspNetCore": "Warning" }
  },
  "AllowedHosts": "*"
}
